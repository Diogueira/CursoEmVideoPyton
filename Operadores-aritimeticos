n1 = int(input('um valor! '))
n2 = int(input('outro valor! '))
s = n1 + n2
sub = n1 - n2
n = n1 * n2
d = n1 / n2
di = n1 // n2
e = n1 ** n2
print('valor da soma {}, \n Valor da subtração {}, \n valor do produto {} \n Valor da divisão {:.3f} ' .format(s, sub, n, d), end= '')
print('Valor da Divisão inteira {} \n A potência é {}' .format(di, e))
